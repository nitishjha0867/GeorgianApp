<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size20"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:visibility="invisible"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/border"
            android:paddingTop="@dimen/size10"
            android:paddingBottom="@dimen/size10"
            android:layout_weight="0.5"
            android:id="@+id/linearSignup">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/tvSignup"
                android:text="Signup"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/size10"
            android:paddingBottom="@dimen/size10"
            android:layout_weight="0.5"
            android:id="@+id/linearLogin">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/tvLogin"
                android:text="Login"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing_bottom"
                android:layout_marginBottom="@dimen/form_spacing_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etFullName_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/full_name"
                        android:inputType="text"
                        android:id="@+id/etFullName"/>

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_spacing_bottom"
                android:layout_marginTop="@dimen/form_spacing_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etMobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                     <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/mobile_no"
                        android:inputType="phone"
                        android:id="@+id/etMobile"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_spacing_bottom"
                android:layout_marginTop="@dimen/form_spacing_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etEmail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:id="@+id/etEmail"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_spacing_bottom"
                android:layout_marginTop="@dimen/form_spacing_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etPassword_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_limit"
                        android:inputType="textPassword"
                        android:id="@+id/etPassword"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_spacing_bottom"
                android:layout_marginTop="@dimen/form_spacing_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etConformPassword_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/conform_password"
                        android:inputType="textPassword"
                        android:id="@+id/etConformPassword"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_spacing_bottom"
                android:layout_marginTop="@dimen/form_spacing_bottom">

                <android.support.design.widget.TextInputLayout
                android:id="@+id/etIntroCode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/intro_code"
                        android:inputType="text"
                        android:id="@+id/etIntroCode"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_spacing_bottom"
                android:layout_marginTop="@dimen/form_spacing_bottom">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/submit"
                    android:id="@+id/btnSignupSubmit"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>